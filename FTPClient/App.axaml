<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="FTPClient.App"
             xmlns:local="using:FTPClient"
             RequestedThemeVariant="Dark">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Resources>
        <FontFamily x:Key="MadeInfinity">avares://GoogleFonts/Assets/Fonts#MADEINFINITYPersonalUse</FontFamily>
    </Application.Resources>
    
    <Application.Styles>
        <StyleInclude Source="avares://FTPClient/Assets/Icons.axaml"></StyleInclude>
        <StyleInclude Source="avares://FTPClient/Assets/Colors.axaml"></StyleInclude>
        <FluentTheme DensityStyle="Compact">
            <FluentTheme.Palettes>
                <ColorPaletteResources x:Key="Light" Accent="{StaticResource Accent}" RegionColor="{StaticResource Accent2}" ErrorText="Red" />
                <ColorPaletteResources x:Key="Dark" Accent="{StaticResource Accent}" RegionColor="{StaticResource Accent2}" ErrorText="Red" />
            </FluentTheme.Palettes>
        </FluentTheme>
    </Application.Styles>
</Application>