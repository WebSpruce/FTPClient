<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="FTPClient.App"
             xmlns:local="using:FTPClient"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme DensityStyle="Compact">
            <FluentTheme.Palettes>
                <ColorPaletteResources x:Key="Light" Accent="Green" RegionColor="Red" ErrorText="Red" />
                <ColorPaletteResources x:Key="Dark" Accent="DarkGreen" RegionColor="Red" ErrorText="Yellow" />
            </FluentTheme.Palettes>
        </FluentTheme>
    </Application.Styles>
</Application>